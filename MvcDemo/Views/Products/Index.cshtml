@model IEnumerable<MvcDemo.Models.Product>
@{
    ViewData["Title"] = "Productos";
}
<h1>Productos</h1>

<p><a class="btn" asp-action="Create">Crear nuevo</a></p>

<table class="table">
    <thead>
        <tr><th>Id</th><th>Nombre</th><th>Precio</th><th>Creado</th></tr>
    </thead>
    <tbody>
@foreach (var p in Model)
{
        <tr>
            <td>@p.Id</td>
            <td>@p.Name</td>
            <td>@p.Price</td>
            <td>@p.CreatedAt</td>
        </tr>
}
    </tbody>
</table>
