@page
@model RegisterModel
@{
    ViewData["Title"] = "Crear cuenta";
}

<div class="login-page">

    <img src="~/images/meetConnieBg.png" class="login-bg" alt="Background" />

    <div class="login-card">

        <h2 class="login-title">Crear cuenta</h2>
        <p class="login-subtitle">Únete para continuar</p>

        <form method="post">

            <div asp-validation-summary="All" class="alert alert-danger"></div>

            <!-- EMAIL -->
            <div class="input-group">
                <input asp-for="Input.Email" class="login-input" placeholder="Email" autocomplete="username" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- PASSWORD -->
            <div class="input-group">
                <input asp-for="Input.Password" class="login-input" placeholder="Contraseña" autocomplete="new-password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <!-- CONFIRMAR PASSWORD -->
            <div class="input-group">
                <input asp-for="Input.ConfirmPassword" class="login-input" placeholder="Confirmar contraseña" autocomplete="new-password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-login">Crear cuenta</button>

            <div class="login-footer">
                <p>
                    ¿Ya tienes cuenta?
                    <a asp-page="./Login">Iniciar sesión</a>
                </p>
            </div>

        </form>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
