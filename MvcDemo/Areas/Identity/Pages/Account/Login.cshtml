@page
@model MvcDemo.Areas.Identity.Pages.Account.LoginModel

@{
    ViewBag.Title = "Login";
}

<div class="login-page">
    <img class="login-bg" src="~/images/accountBg.png" alt="Fondo" />

    <div class="login-card">
        <h2 class="login-title">Iniciar sesión</h2>
        <p class="login-subtitle">¡Bienvenido de nuevo!</p>

        <form method="post">
            @Html.AntiForgeryToken()

            <!-- EMAIL -->
            <div class="input-group">
                <input asp-for="Input.Email" class="form-control login-input" placeholder="Email" />
            </div>
            <span asp-validation-for="Input.Email" class="text-danger small"></span>

            <!-- PASSWORD -->
            <div class="input-group">
                <input asp-for="Input.Password" type="password" class="form-control login-input" placeholder="Contraseña" />
            </div>
            <span asp-validation-for="Input.Password" class="text-danger small"></span>

            <button type="submit" class="btn-login">Iniciar sesión</button>

            <p class="login-footer">
                ¿No tienes cuenta?
                <a asp-area="Identity" asp-page="/Account/Register">Regístrate aquí</a>
            </p>
        </form>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}